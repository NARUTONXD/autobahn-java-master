<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.crossbar.autobahn.sdjx">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="io.crossbar.autobahn.sdjx.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity android:name="io.crossbar.autobahn.sdjx.ui.MainActivity">

        </activity>
        <activity android:name="io.crossbar.autobahn.sdjx.ui.SplashActivity"
            android:windowSoftInputMode="stateUnchanged|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            />
        </activity>
        <activity android:name="io.crossbar.autobahn.sdjx.ui.TestSuiteClientActivity" />
        <activity android:name="io.crossbar.autobahn.sdjx.ui.ChatActivity" />
        <activity android:name="io.crossbar.autobahn.sdjx.ui.LoginActivity" />
    </application>

</manifest>
